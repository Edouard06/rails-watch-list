<!-- app/views/lists/index.html.erb -->

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td>
          <%= link_to "Edit", edit_list_path(list) %>
          <%= form_with(model: list, method: :delete) do |form| %>
            <%= form.submit "Delete", data: { confirm: "Are you sure?" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New List", new_list_path %>
