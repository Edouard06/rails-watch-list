<!-- app/views/lists/show.html.erb -->

<h1>List Details</h1>

<p><strong>Name:</strong> <%= @list.name %></p>

<%= link_to "Edit", edit_list_path(@list) %> |
<%= link_to "Back to Lists", lists_path %> |
<%= form_with(model: @list, method: :delete) do |form| %>
  <%= form.submit "Delete", data: { confirm: "Are you sure?" } %>
<% end %>
