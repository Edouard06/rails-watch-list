<h1>Movies</h1>

<div class="movies-container">
  <% @movies.each do |movie| %>
    <div class="movie-card">
      <div class="movie-poster">
        <%= image_tag movie.poster_url, alt: movie.title %>
      </div>
      <div class="movie-info">
        <h3><%= movie.title %></h3>
        <p><%= movie.overview %></p>
        <div class="movie-rating">Rating: <%= movie.rating %></div>
        <%= link_to "Show", movie, class: "btn btn-show" %>
        <%= link_to "Edit", edit_movie_path(movie), class: "btn btn-edit" %>
        <%= link_to "Delete", movie, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-delete" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New Movie", new_movie_path, class: "btn btn-new" %>
